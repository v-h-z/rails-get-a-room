<h1>Rooms#index</h1>
<p>Find me in app/views/rooms/index.html.erb</p>

<ul>
<% @rooms.each do |room| %>
  <li><%= link_to room.name, room_path(room)  %> (<%= link_to "edit", edit_room_path(room) if policy(room).edit? %>-<%= link_to "delete", room_path(room), method:'delete', data: {confirm: 'are you sure?'} if policy(room).destroy? %>) <%= room.user.email %> </li>
<% end %>
</ul>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
